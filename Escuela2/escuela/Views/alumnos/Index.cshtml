@model List<escuela.Models.ViewModels.ListAlumnosViewModel>
@{
    ViewBag.Title = "MIS DATOS";
}

<h2>@ViewBag.Title</h2>


<div class="row" style="text-align:right; padding:5px">
    <a href="~/alumnos/Nuevo" class="btn btn-primary">NUEVO</a>
    
</div>

    <div class="row" >
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                </tr>
                @foreach (var oElemento in Model)
                {
                    <tr>
                        <td>@oElemento.Idalumnos</td>
                        <td>@oElemento.Nombre</td>
                        <td>@oElemento.Apellido</td>

                        <td>
                            <a class="btn btn-default" href="~/alumnos/Editar/@oElemento.Idalumnos">EDITAR</a>
                            <a class="btn btn-danger" href="~/alumnos/Eliminar/@oElemento.Idalumnos">ELIMINAR</a>
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
